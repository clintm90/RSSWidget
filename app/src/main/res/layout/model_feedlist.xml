<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:tag="@string/app_name"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:padding="10dp">

    <ImageView
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:id="@+id/model_feedList_icon"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:src="@drawable/noset"/>

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/noset"
        android:id="@+id/model_feedList_title"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/model_feedList_icon"
        android:layout_toEndOf="@+id/model_feedList_icon"
        android:textColor="#333333"
        android:lines="1"
        android:ellipsize="end"
        android:paddingLeft="10dp"
        android:textSize="18sp"
        />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/noset"
        android:id="@+id/model_feedList_description"
        android:layout_below="@+id/model_feedList_title"
        android:layout_toRightOf="@+id/model_feedList_icon"
        android:layout_toEndOf="@+id/model_feedList_icon"
        android:paddingLeft="10dp"
        android:paddingTop="3dp"
        android:lines="1"
        android:ellipsize="end"/>
</RelativeLayout>

